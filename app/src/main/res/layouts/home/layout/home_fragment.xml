<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".home.home_fragment">

    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Dashboard"
                android:textColor="#ffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/a"
                android:layout_marginTop="6dp"
                android:text="Test Halaman"
                android:textColor="#ffff"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:onClick="id_tombol_profil"
                android:src="@drawable/logo"
                app:layout_columnWeight="1"
                tools:ignore="OnClick" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrool1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_weight="8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="146dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/atas"
                android:orientation="vertical">


                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:padding="10dp"
                    android:id="@+id/menu_awal"
                    app:alignmentMode="alignMargins"
                    app:columnCount="2"
                    app:columnOrderPreserved="false"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_weight="8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:rowCount="1"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/id_tombol_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:layout_columnWeight="1"
                        android:onClick="id_tombol_1"
                        app:layout_rowWeight="1"
                        tools:ignore="OnClick"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="93dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="68dp"
                                android:layout_height="63dp"
                                android:src="@drawable/menu1"
                                tools:ignore="MissingConstraints,OnClick" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_1"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:id="@+id/id_tombol_2"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:onClick="id_tombol_2"
                        tools:ignore="OnClick"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="93dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp"

                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="68dp"
                                android:layout_height="63dp"
                                android:src="@drawable/menu2"
                                tools:ignore="MissingConstraints,OnClick" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_2"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </androidx.gridlayout.widget.GridLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:padding="10dp"
                    app:alignmentMode="alignMargins"
                    app:columnCount="2"
                    app:columnOrderPreserved="false"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_weight="8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:rowCount="1"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:id="@+id/id_tombol_3"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:onClick="id_tombol_3"
                        tools:ignore="OnClick"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="93dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="68dp"
                                android:layout_height="63dp"
                                android:src="@drawable/menu3"
                                tools:ignore="MissingConstraints,OnClick" />

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/menu_pesanan"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_3"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:layout_columnWeight="1"
                        android:id="@+id/id_tombol_4"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:onClick="id_tombol_4"
                        tools:ignore="OnClick"
                        app:layout_rowWeight="1"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="93dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="68dp"
                                android:layout_height="63dp"
                                android:src="@drawable/menu4"
                                tools:ignore="MissingConstraints,OnClick" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_4"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </androidx.gridlayout.widget.GridLayout>


                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:padding="10dp"
                    app:alignmentMode="alignMargins"
                    app:columnCount="2"
                    app:columnOrderPreserved="false"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_weight="8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:rowCount="1"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/id_tombol_5"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:onClick="id_tombol_5"
                        tools:ignore="OnClick"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="93dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="68dp"
                                android:layout_height="63dp"
                                android:src="@drawable/menu5"
                                tools:ignore="MissingConstraints,OnClick" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_5"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:id="@+id/id_tombol_6"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:onClick="id_tombol_6"
                        tools:ignore="OnClick"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="93dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="68dp"
                                android:layout_height="63dp"
                                android:src="@drawable/menu6"
                                tools:ignore="MissingConstraints,OnClick" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_6"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </androidx.gridlayout.widget.GridLayout>


                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:visibility="invisible"
                    app:alignmentMode="alignMargins"
                    app:columnCount="2"
                    app:columnOrderPreserved="false"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_weight="8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:rowCount="1"
                    tools:ignore="MissingConstraints">
                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </ScrollView>




    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.splashscreen_activity">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>