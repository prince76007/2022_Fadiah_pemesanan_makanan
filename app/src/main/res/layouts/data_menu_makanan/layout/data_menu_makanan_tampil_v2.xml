<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:id="@+id/linearNomor"
            android:visibility="gone"
            android:background="@drawable/border_left_background_green"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView

                android:id="@+id/txt_nomor"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minHeight="50dp"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearBaris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />
            <TextView
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/id_menu_makanan"/>
	
            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_menu_makanan" />
            <TextView
                android:id="@+id/id_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama" />
            <TextView
                android:id="@+id/jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_kategori" />
            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jumlah" />
            <TextView
                android:id="@+id/foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harga" />
            <TextView
                android:id="@+id/keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foto" />


        </LinearLayout>

         <LinearLayout
            android:id="@+id/linearEdit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/grey"
            android:clickable="true"
            android:foreground="?selectableItemBackground">

            <TextView
                android:id="@+id/tombol_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="60dp"
                android:background="@color/color_edit"
                android:textColor="@color/putih"
                android:text="Edit"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearHapus"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            android:background="@color/grey"
            android:clickable="true"
            android:foreground="?selectableItemBackground">

            <TextView
                android:id="@+id/tombol_hapus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="60dp"
                android:text="Hapus"
                android:background="@color/color_hapus"
                android:textColor="@color/putih"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
